R"(
{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Sushi Host Config JSON Schema",
  "description": "JSON Schema to validate host configuration definitions",

  "type": "object",
  "properties":
  {
    "host_config":
    {
      "type": "object",
      "properties":
      {
        "samplerate":
        {
          "type": "integer",
          "minimum": 1000,
          "maximum": 192000
        },
        "time_signature" :
        {
          "type": "object",
          "properties":
          {
            "numerator":
            {
              "type": "integer"
            },
            "denominator":
            {
              "type": "integer"
            },
            "required": ["numerator", "denominator"]
          }
        },
        "playing_mode":
        {
          "enum": ["stopped", "playing"]
        },
        "tempo_sync":
        {
          "enum": ["internal", "midi", "ableton_link"]
        },
        "audio_clip_detection" :
        {
          "type": "object",
          "properties":
          {
            "inputs":
            {
              "type": "boolean"
            },
            "outputs":
            {
              "type": "boolean"
            }
          }
        },
        "master_limiter" :
        {
          "type": "boolean"
        },
        "cv_inputs":
        {
          "type": "integer",
          "minimum": 0,
          "maximum": 4
        },
        "cv_outputs":
        {
          "type": "integer",
          "minimum": 0,
          "maximum": 4
        },
        "midi_inputs":
        {
          "type": "integer",
          "minimum": 0
        },
        "midi_outputs":
        {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": ["samplerate"]
    }
  },
  "required": ["host_config"]
}
)"