R"(
{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Sushi Plugin Chain JSON Schema",
  "description": "JSON Schema to validate track definitions",

  "type": "object",
  "properties":
  {
    "tracks":
    {
      "type": "array",
      "items":
      {
        "type": "object",
        "properties":
        {
          "name":
          {
            "type": "string",
            "minLength": 1
          },
          "mode":
          {
            "enum": ["mono", "stereo", "multibus"]
          },
          "input_busses" :
          {
            "type": "integer",
            "minimum":  0
          },
          "output_busses" :
          {
            "type": "integer",
            "minimum":  0
          },
          "inputs":
          {
            "type": "array",
            "items":
            {
              "type": "object",
              "oneOf":
              [
                {
                  "type": "object",
                  "properties":
                  {
                    "engine_bus":
                    {
                      "type": "integer",
                      "minimum": 0
                    },
                    "track_bus":
                    {
                      "type": "integer",
                      "minimum": 0
                    }
                  },
                  "required": ["engine_bus","track_bus"]
                },
                {
                  "type": "object",
                  "properties":
                  {
                    "engine_channel":
                    {
                      "type": "integer",
                      "minimum": 0
                    },
                    "track_channel":
                    {
                      "type": "integer",
                      "minimum": 0
                    }
                  },
                  "required": ["engine_channel","track_channel"]
                }
              ]
            }
          },
          "outputs":
          {
            "type": "array",
            "items":
            {
              "type": "object",
              "oneOf":
              [
                {
                  "type": "object",
                  "properties":
                  {
                    "engine_bus":
                    {
                      "type": "integer",
                      "minimum": 0
                    },
                    "track_bus":
                    {
                      "type": "integer",
                      "minimum": 0
                    }
                  },
                  "required": ["engine_bus","track_bus"]
                },
                {
                  "type": "object",
                  "properties":
                  {
                    "engine_channel":
                    {
                      "type": "integer",
                      "minimum": 0
                    },
                    "track_channel":
                    {
                      "type": "integer",
                      "minimum": 0
                    }
                  },
                  "required": ["engine_channel","track_channel"]
                }
              ]
            }
          },
          "plugins":
          {
            "type": "array",
            "items":
            {
              "type": "object",
              "oneOf":
              [
                {
                  "properties":
                  {
                    "uid":
                    {
                      "type": "string",
                      "minLength": 1
                    },
                    "name":
                    {
                      "type": "string",
                      "minLength": 1
                    },
                    "type":
                    {
                      "enum": ["internal"]
                    }
                  },
                  "required": ["uid", "name", "type"]
                },
                {
                  "properties":
                  {
                    "path":
                    {
                      "type": "string",
                      "minLength": 1
                    },
                    "name":
                    {
                      "type": "string",
                      "minLength": 1
                    },
                    "type":
                    {
                      "enum": ["vst2x"]
                    }
                  },
                  "required": ["path", "name", "type"]
                },
                {
                  "properties":
                  {
                    "uid":
                    {
                      "type": "string",
                      "minLength": 1
                    },
                    "path":
                    {
                      "type": "string",
                      "minLength": 1
                    },
                    "name":
                    {
                      "type": "string",
                      "minLength": 1
                    },
                    "type":
                    {
                      "enum": ["vst3x"]
                    }
                  },
                  "required": ["uid","path", "name", "type"]
                },
                {
                  "properties":
                  {
                    "uri":
                    {
                      "type": "string",
                      "minLength": 1
                    },
                    "name":
                    {
                      "type": "string",
                      "minLength": 1
                    },
                    "type":
                    {
                      "enum": ["lv2"]
                    }
                  },
                  "required": ["uri", "name", "type"]
                }
              ]
            }
          }
        },
        "required": ["name", "mode", "inputs", "outputs", "plugins"]
      },
      "minItems": 1
    }
  },
  "required": ["tracks"]
}
)"